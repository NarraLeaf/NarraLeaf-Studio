{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./*"],
      "@root/*": ["../../*"]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": ["node"]
  },
  "include": [
    "./**/*"
  ],
}
